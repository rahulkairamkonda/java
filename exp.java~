import java.util.*;
class exp
{
    public static void main()
    {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        try
        {
            int c=(a+b)/(b-b);
            System.out.println(c);
        }
        catch(ArithmeticException ae)
        {
            System.out.println(ae);
        }
    }
}

        