import java.util.Scanner;
class MATPAT1
{
    public static void main()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter n rows");
        int n=sc.nextInt();int k;
        int a[][]=new int[n][];
        
        for(int i=0;i<n;i++)
        {
            a[i]=new int[i+1];
        }
        
        for(int i=0;i<a.length;i++)
        {
            
            for(int j=0;j<a[i].length;j++)
            {   
                System.out.print("*");                          
            }
            
            System.out.println();
        }
    }
} 
